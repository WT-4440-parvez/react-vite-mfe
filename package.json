{
  "name": "microfrontend-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:utility\" \"npm run dev:main\"",
    "dev:utility": "npm run dev --workspace=utility-app",
    "dev:main": "npm run dev --workspace=main-app",
    "build": "npm run build --workspaces",
    "build:utility": "npm run build --workspace=utility-app",
    "build:main": "npm run build --workspace=main-app",
    "preview:utility": "npm run preview --workspace=utility-app",
    "preview:main": "npm run preview --workspace=main-app",
    "type-check": "npm run type-check --workspaces"
  },
  "devDependencies": {    
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^8.2.2",
  "postcss": "^8.5.6",
  "tailwindcss": "^3.4.8",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
